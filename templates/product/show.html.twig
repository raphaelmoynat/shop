{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}


{% block body %}
    <div>
        <a href="{{ path("app_product") }}" class="btn btn-primary mt-5 ">Retour</a>
    </div>
    <div class="text-center mb-3" ><h1>Page produit</h1></div>

    <div class="row">
            <div class="d-flex flex-column justify-content-center align-items-center mb-3">
                <div class="card h-100 col-6">
                    <div class="card-header">
                        {% include 'image/image_or_not_image.html.twig' with {object:product} %}
                    </div>
                    <div class="card-body">
                        <div class="card-title d-flex justify-content-between">
                            <h5>{{ product.name }}</h5>
                        </div>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text">{{ product.price }}</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <small class="text-muted mt-3 d-flex flex-column">

                            <div>Ajout√© le {{ product.createdAt|date("d/m/Y H:i") }}</div>
                        </small>
                        <a href="{{ path("app_cart_add", {id:product.id, quantity:1}) }}" class="btn btn-primary">Add to cart</a>

                    </div>
                </div>


            </div>
        <div class="container d-flex flex-column col-6 justify-content-center  my-3">
            {{ form_start(form, {attr: {action:path("app_comment_create", {id:product.id})}}) }}


            {{ form_widget(form.content) }}
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success ml-2">Commenter</button>
            </div>
            {{ form_end(form) }}
        </div>

        <div class="d-flex flex-column row-gap-5 align-items-center mb-3">
        {% for comment in product.comments|reverse %}
            <div class="card d-flex  justify-content-center border-dark col-6 mb-1">
                <div>{{ comment.content }}</div>
                <div class="">{{ comment.createdAt|date("d/m/Y H:i") }}</div>

            </div>

        {% endfor %}
        </div>

    </div>

{% endblock %}