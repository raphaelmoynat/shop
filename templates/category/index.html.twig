{% extends 'base.html.twig' %}


{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h3 class="mb-4">Liste des Catégories</h3>

        {% for category in categories %}
            <div class="card mb-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-column">
                        <span class="fs-4">{{ category.name }}</span>
                    </div>
                    <div>
                        <a href="{{ path('delete_category', {'id': category.id}) }}" class="btn btn-danger ms-2">Supprimer</a>
                        <a href="{{ path('edit_category', {'id': category.id}) }}" class="btn btn-warning ms-2">Editer</a>

                    </div>
                </div>
            </div>
        {% endfor %}

        <h3 class="mt-5">Nouvelle Catégorie</h3>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-success">Créer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}